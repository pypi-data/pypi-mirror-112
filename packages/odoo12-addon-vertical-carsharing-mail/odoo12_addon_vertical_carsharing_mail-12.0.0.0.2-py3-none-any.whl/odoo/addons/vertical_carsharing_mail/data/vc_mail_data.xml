<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>

    <template id="message_notification_email" inherit_id="mail.message_notification_email">
      <!--Remove has access button-->
      <xpath expr="//div[1]/div[1]" position="attributes">
        <attribute name="style">display:none</attribute>
      </xpath>
      <xpath expr="//div[1]/div[2]" position="attributes">
        <attribute name="style">display:none</attribute>
      </xpath>
      <!--Remove "Powered by Odoo"-->
      <xpath expr="//div[1]/p[1]" position="attributes">
        <attribute name="style">display:none</attribute>
      </xpath>
    </template>
    
    <template id="mail_notification_paynow" inherit_id="mail.mail_notification_paynow">
      <!--Remove has access button-->
      <xpath expr="//tbody[1]/tr[2]/td[1]/div[1]" position="attributes">
        <attribute name="style">display:none</attribute>
      </xpath>
      <!--Remove "Powered by Odoo"-->
      <xpath expr="//td[@style='min-width: 590px; padding: 8px; font-size:11px;']" position="attributes">
        <attribute name="style">min-width: 590px; padding: 8px; font-size:11px; display: none;</attribute>
      </xpath>
    </template>

    <!--template id="mail_notification_borders" inherit_id="mail.mail_notification_borders">
      <xpath expr="//tbody[1]/tr[4]" position="replace">
        <div> mail notification borders tr4</div>
      </xpath>
    </template>

    <template id="mail_notification_light" inherit_id="mail.mail_notification_light">
      <xpath expr="//table[1]/tr[2]" position="replace">
        <div> mail notification light tr2</div>
      </xpath>
    </template-->

  </data>
</odoo>